{% extends '@KodoDashboardBundle/Resources/views/base.html.twig' %}

{% block sectiontitle %}Sections list{% endblock %}
{% block body %}
    <div class="row">
        <div class="container-fluid">
            <a href="{{ path('sectionmenu_new') }}" class="btn btn-primary">Create a new section</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Position</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sectionmenu in sectionmenus %}
            <tr>
                <td><a href="{{ path('sectionmenu_show', { 'id': sectionmenu.id }) }}">{{ sectionmenu.id }}</a></td>
                <td>{{ sectionmenu.title }}</td>
                <td>{{ sectionmenu.position }}</td>
                <td>{% if sectionmenu.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('sectionmenu_show', { 'id': sectionmenu.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> show</a>

                    <a class="btn btn-default" href="{{ path('sectionmenu_edit', { 'id': sectionmenu.id }) }}"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}