<div class="col-sm-3 col-md-2 sidebar">

    {% if sections %}
        {% for section in sections %}
            {% if section.active == 1 %}
            <ul class="nav nav-divider">
                <li><h4>{{ section.title }}</h4></li>
                <ul class="nav nav-sidebar">
                    {% for item in section.items %}
                        {% if item.active == 1 %}
                            <li><a href="{{ path(item.routename) }}">{{ item.name }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </ul>
            {% endif %}
        {% endfor %}
    {% endif %}

    <ul class="nav nav-divider">
        <li><h4>Parameters</h4></li>
        <ul class="nav nav-sidebar">
            <li><a href="{{ path('general_index') }}">General</a></li>
            <li><a href="#" data-toggle="collapse" data-target="#submenu">Menu</a>
                <ul class="nav collapse col-md-10 col-md-offset-2" id="submenu">
                    <li><a href="{{ path('sectionmenu_index') }}">Sections</a>
                    <li><a href="{{ path('itemmenu_index') }}">Items</a>
                </ul>
            </li>
        </ul>
    </ul>

</div>