{% extends '@KodoDashboardBundle/Resources/views/base.html.twig' %}

{% block sectiontitle %}Items list{% endblock %}
{% block body %}
    <div class="row">
        <div class="container-fluid">
            <a href="{{ path('itemmenu_new') }}" class="btn btn-primary">Create a new item</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>parent id</th>
                <th>Routename</th>
                <th>Name</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for itemmenu in itemmenus %}
            <tr>
                <td><a href="{{ path('itemmenu_show', { 'id': itemmenu.id }) }}">{{ itemmenu.id }}</a></td>
                <td>{{ itemmenu.sectionmenuId }}</td>
                <td>{{ itemmenu.routename }}</td>
                <td>{{ itemmenu.name }}</td>
                <td>{% if itemmenu.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('itemmenu_show', { 'id': itemmenu.id }) }}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> show</a>

                    <a class="btn btn-default" href="{{ path('itemmenu_edit', { 'id': itemmenu.id }) }}"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
